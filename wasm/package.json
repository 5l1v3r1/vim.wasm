{
  "name": "vim-wasm",
  "version": "0.0.3",
  "description": "Vim editor ported to WebAssembly",
  "type": "module",
  "main": "vimwasm.js",
  "scripts": {
    "build:main": "tsc -d -p tsconfig.main.json",
    "build:worker": "tsc -p tsconfig.worker.json",
    "build": "npm-run-all -p build:main build:worker",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:worker": "tsc -p tsconfig.worker.json --watch",
    "watch": "npm-run-all -p watch:main watch:worker",
    "minify": "uglifyjs --output vim.js vim.js && uglifyjs --output main.js main.js && uglifyjs --output vimwasm.js vimwasm.js",
    "prettier": "prettier --check --ignore-path .gitignore '*.ts'",
    "eslint": "eslint '*.ts' 'test/*.ts'",
    "stylelint": "stylelint style.css",
    "lint": "npm-run-all -p stylelint eslint prettier",
    "fix:prettier": "prettier --write --ignore-path .gitignore '*.ts'",
    "fix:eslint": "eslint --fix '*.ts' 'test/*.ts'",
    "fix": "npm-run-all -p fix:prettier fix:eslint",
    "karma": "karma start",
    "test": "karma start --single-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhysd/vim.wasm.git"
  },
  "keywords": [
    "Vim",
    "editor",
    "WebAssembly"
  ],
  "author": "rhysd <lin90162@yahoo.co.jp> (https://rhysd.github.io/)",
  "license": "Vim",
  "homepage": "https://github.com/rhysd/vim.wasm#readme",
  "bugs": {
    "url": "https://github.com/rhysd/vim.wasm/issues"
  },
  "files": [
    "vim.wasm",
    "vim.data",
    "vim.js",
    "vimwasm.js",
    "vimwasm.js.map",
    "vimwasm.ts",
    "vimwasm.d.ts",
    "common.d.ts",
    "pre.js",
    "pre.js.map",
    "pre.ts",
    "runtime.js",
    "runtime.js.map",
    "runtime.ts"
  ],
  "types": "./vimwasm.d.ts",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/sinon": "^7.0.13",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-security": "^1.4.0",
    "karma": "^4.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sinon": "^1.0.5",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "puppeteer": "^1.18.0",
    "sinon": "^7.3.2",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "typescript": "^3.5.2",
    "uglify-es": "^3.3.9"
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "node": false
    },
    "globals": {
      "debug": true,
      "VW": true,
      "Module": true,
      "UTF8ToString": true,
      "autoAddDeps": true,
      "mergeInto": true,
      "LibraryManager": true
    },
    "parserOptions": {
      "ecmaVersion": 2015
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_$"
        }
      ]
    }
  }
}
